{
    "name": "sandersgutierrez/sve",
    "description": "Sistema de Votación Estudiantil",
    "type": "project",
    "homepage": "https://sgdev-sistema-votacion-estudiantil.herokuapp.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Sanders Gutiérrez",
            "email": "ing.sanders@gmail.com"
        }
    ],
    "minimum-stability": "beta",
    "require": {
        "php": "8.*",
        "ext-pdo": "*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.0",
        "slim/twig-view": "^3.0",
        "php-di/php-di": "^6.1",
        "doctrine/dbal": "^2.9",
        "laminas/laminas-diactoros": "^2.2",
        "vlucas/phpdotenv": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "dev": "php -S localhost:8000 -t public",
        "test": "phpunit --colors=always --testdox tests/"
    }
}
