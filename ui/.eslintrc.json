{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommend", "plugin:react/jsx-runtime"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["warn", "never"],
        "quotes": ["error", "single"]
    },
    "plugins": ["react"],
    "ignorePatterns": ["webpack.config.js", "jest.config.js", "**/node_modules/"]
}
